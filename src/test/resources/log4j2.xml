<?xml version="1.0" encoding="UTF-8"?>
<Configuration >
    <Appenders>
        <!-- For Console-->
        <Console name="STDOUT" target="SYSTEM_OUT" >
            <PatternLayout>
  				<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %C{2} %F%L - %m%n</pattern>
			</PatternLayout>
        </Console>

        <!-- For writing logs to a file-->
        <File name="FILEOUT" fileName="logs/testautomation.log" append="true" >
            <PatternLayout>
            	<Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %C{2} %F%L - %m%n</Pattern>
            </PatternLayout>
        </File>    
    </Appenders>

    <!-- Types of Loggers -->
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" level="info"/>
            <AppenderRef ref="FILEOUT" level="info"/>
        </Root>
    </Loggers>
</Configuration>